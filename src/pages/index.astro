---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SocialLinks } from "../consts";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import heroImage from "../assets/hero-guitar.jpg";

const recentPosts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 4);

const books = (await getCollection("books"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout>
  <main class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="flex flex-col gap-8">
        <h1 class="text-7xl md:text-8xl font-bold leading-none"><span class="text-primary dark:text-primary-dark">G</span>ianni <span class="text-primary dark:text-primary-dark">S</span>alinetti</h1>
        <p class="text-2xl max-w-2xl font-light leading-normal">
          I write about music, technology, and life.
        </p>
        <div class="flex flex-wrap gap-8">
          {SocialLinks.map((link) => (
            <a
              class="text-xl text-primary dark:text-primary-dark underline underline-offset-4 hover:opacity-75 transition-opacity"
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
      <div>
        <Image
          src={heroImage}
          alt="Acoustic guitar"
          class="rounded-2xl shadow-lg w-full object-cover aspect-[4/3]"
          widths={[400, 800]}
          sizes="(max-width: 1024px) 100vw, 50vw"
        />
      </div>
    </div>
  </main>

  <section class="app-container py-24">
    <h2 class="section-title">About Me</h2>
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 mt-6">
      <div class="space-y-5 text-lg leading-relaxed opacity-90">
        <p>
          I'm a solution architect and musician based in Italy. By day I work in the cloud-native
          ecosystem, focusing on containers, Kubernetes, AI and platform engineering. By night I
          pick up the guitar and explore the space where jazz meets improvisation.
        </p>
        <p>
          I co-authored <a href="/books" class="text-primary dark:text-primary-dark underline underline-offset-4">Podman for DevOps</a>
          (Packt, now in its second edition), a hands-on guide to building secure, rootless
          containers and integrating them into real-world DevOps and AI workflows.
        </p>
      </div>
      <div class="space-y-5 text-lg leading-relaxed opacity-90">
        <p>
          Music has always been a parallel thread in my life. I play acoustic, electric and a bit of classical
          guitar, and I've been involved in recording projects that blend jazz, composition,
          and sonic exploration. You can find some of my work in the
          <a href="/recordings" class="text-primary dark:text-primary-dark underline underline-offset-4">Recordings</a> section.
        </p>
        <p>
          This site is where these worlds meet -- a place to share ideas on technology, music,
          and everything in between.
        </p>
      </div>
    </div>
  </section>

  {recentPosts.length > 0 && (
    <section class="app-container pb-24">
      <h2 class="section-title">Recent Posts</h2>
      <div class="grid my-6 md:grid-cols-2 xl:grid-cols-4 gap-6">
        {recentPosts.map((post) => (
          <a href={`/blog/${post.id}`} class="flex flex-col gap-3 pb-8 group transition-colors">
            <h4 class="text-xl font-semibold group-hover:text-primary dark:group-hover:text-primary-dark group-hover:underline underline-offset-4 transition-colors">
              {post.data.title}
            </h4>
            <p class="line-clamp-3 opacity-80">{post.data.description}</p>
            <p class="uppercase text-sm mt-auto tracking-tight opacity-60">
              {post.data.date.toLocaleDateString("en-US", { day: "numeric", month: "short", year: "numeric" })}
            </p>
          </a>
        ))}
      </div>
      <a class="w-fit flex gap-2 bg-foreground/10 text-foreground dark:bg-foreground-dark/10 dark:text-foreground-dark px-5 py-3 md:px-4 md:py-2 rounded-lg items-center hover:opacity-75 transition-opacity" href="/blog">
        Read All
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </section>
  )}

  <section class="app-container pb-24">
    <h2 class="section-title">Gallery</h2>
    <div class="grid my-6 grid-cols-2 xl:grid-cols-4 gap-4">
      <a href="/gallery" class="overflow-hidden rounded-xl group">
        <img src="/images/gallery/spiral-staircase.jpg" alt="Spiral staircase" class="w-full aspect-square object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
      </a>
      <a href="/gallery" class="overflow-hidden rounded-xl group">
        <img src="/images/gallery/pier.jpg" alt="Pier extending into the water" class="w-full aspect-square object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
      </a>
      <a href="/gallery" class="overflow-hidden rounded-xl group">
        <img src="/images/gallery/stage-guitar.jpg" alt="Guitar on a concert stage" class="w-full aspect-square object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
      </a>
      <a href="/gallery" class="overflow-hidden rounded-xl group">
        <img src="/images/gallery/prickly-pear.jpg" alt="Prickly pear cactus" class="w-full aspect-square object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
      </a>
    </div>
    <a class="w-fit flex gap-2 bg-foreground/10 text-foreground dark:bg-foreground-dark/10 dark:text-foreground-dark px-5 py-3 md:px-4 md:py-2 rounded-lg items-center hover:opacity-75 transition-opacity" href="/gallery">
      View Gallery
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </section>

  <section class="app-container py-24 grid lg:grid-cols-2 gap-28 lg:gap-10">
    <div class="space-y-6">
      <h2 class="section-title">My Books</h2>
      <div class="space-y-6">
        {books.map((book) => (
          <a href={`/books/${book.id}`} class="flex gap-4 group">
            {book.data.cover && (
              <img
                src={book.data.cover}
                alt={`${book.data.title} cover`}
                class="w-20 h-auto object-contain rounded-md shrink-0 self-start"
              />
            )}
            <div>
              <h4 class="text-xl font-semibold group-hover:text-primary dark:group-hover:text-primary-dark group-hover:underline underline-offset-4 transition-colors">
                {book.data.title}
              </h4>
              {book.data.subtitle && (
                <p class="text-sm opacity-60 mt-1">{book.data.subtitle}</p>
              )}
              <p class="text-sm opacity-50 mt-1">
                {book.data.publisher} &middot; {book.data.publishDate.toLocaleDateString("en-US", { year: "numeric" })}
              </p>
            </div>
          </a>
        ))}
      </div>
      <a class="w-fit flex gap-2 bg-foreground/10 text-foreground dark:bg-foreground-dark/10 dark:text-foreground-dark px-5 py-3 md:px-4 md:py-2 rounded-lg items-center mt-4 hover:opacity-75 transition-opacity" href="/books">
        View All Books
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
    <div class="space-y-6">
      <h2 class="section-title">Get in Touch</h2>
      <p class="text-lg max-w-xl">
        Feel free to reach out via email or connect on social media.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          class="w-fit flex gap-2 bg-foreground text-background dark:bg-foreground-dark dark:text-background-dark px-5 py-3 md:px-4 md:py-2 rounded-lg items-center hover:opacity-75 transition-opacity"
          href="mailto:gbsalinetti@gmail.com"
        >
          gbsalinetti@gmail.com
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
