---
import BaseLayout from "../../layouts/BaseLayout.astro";
import RecordingCard from "../../components/RecordingCard.astro";
import { getCollection } from "astro:content";

const recordings = (await getCollection("recordings"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Recordings - Gianni Salinetti" description="Music and recordings.">
  <main class="app-container pt-36">
    <h1 class="text-6xl pb-8 font-bold">Recordings</h1>
    <p class="md:w-2/3 text-lg leading-[2rem]">
      Music, albums, and recordings I've been involved with.
    </p>
  </main>
  <section class="app-container py-12">
    {recordings.length === 0 ? (
      <p class="opacity-60 italic">No recordings yet. Check back soon!</p>
    ) : (
      <div class="grid my-6 md:grid-cols-2 gap-8">
        {recordings.map((recording) => (
          <RecordingCard
            title={recording.data.title}
            description={recording.data.description}
            date={recording.data.date}
            spotifyUrl={recording.data.spotifyUrl}
            type={recording.data.type}
            artist={recording.data.artist}
            slug={recording.id}
            tags={recording.data.tags}
          />
        ))}
      </div>
    )}
  </section>
</BaseLayout>
