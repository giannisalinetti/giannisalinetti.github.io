---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const books = await getCollection("books");
  return books.map((book) => ({
    params: { slug: book.id },
    props: { book },
  }));
}

const { book } = Astro.props;
const { Content } = await render(book);

const formattedDate = book.data.publishDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
});
---

<BaseLayout title={`${book.data.title} - Gianni Salinetti`} description={book.data.description}>
  <main>
    <article>
      <div class="app-container py-24">
        <div class="max-w-[75ch] mx-auto">
          <a href="/books" class="text-primary dark:text-primary-dark hover:underline underline-offset-4">&larr; Back to Books</a>
          <h1 class="text-4xl sm:text-5xl leading-snug pt-12 font-bold">{book.data.title}</h1>
          {book.data.subtitle && (
            <p class="text-xl opacity-70 mt-3">{book.data.subtitle}</p>
          )}
          <div class="flex flex-wrap items-center gap-3 py-8 opacity-70">
            <span>{book.data.publisher}</span>
            <span>&middot;</span>
            <span>Published {formattedDate}</span>
            {book.data.coAuthors.length > 0 && (
              <>
                <span>&middot;</span>
                <span>with {book.data.coAuthors.join(", ")}</span>
              </>
            )}
          </div>
          {book.data.isbn && (
            <p class="text-sm font-mono opacity-50 mb-4">ISBN: {book.data.isbn}</p>
          )}
          {book.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {book.data.tags.map((tag) => (
                <span class="text-xs px-2.5 py-1 rounded-full bg-foreground/5 dark:bg-foreground-dark/10 opacity-70">{tag}</span>
              ))}
            </div>
          )}
          {book.data.buyLink && (
            <a
              href={book.data.buyLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex gap-2 bg-foreground text-background dark:bg-foreground-dark dark:text-background-dark px-5 py-3 md:px-4 md:py-2 rounded-lg items-center mb-10 hover:opacity-75 transition-opacity"
            >
              Get the book
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          )}
          <div class="prose prose-neutral prose-lg dark:prose-invert prose-img:rounded-xl prose-a:text-primary dark:prose-a:text-primary-dark">
            <Content />
          </div>
        </div>
      </div>
    </article>
  </main>
</BaseLayout>
